<mvc:View
    controllerName="zuiremessas.controller.Worklist"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:t="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
    xmlns:core="sap.ui.core"
    xmlns:semantic="sap.f.semantic">
    

        <f:DynamicPageTitle>
            <f:heading>
                <svm:SmartVariantManagement id="svm" showExecuteOnSelection="true" />
            </f:heading>
            <f:expandedContent>
                <Label id="expandedLabel" text="" />
            </f:expandedContent>
            <f:snappedContent>
                <Label id="snappedLabel" text="" />
            </f:snappedContent>
        </f:DynamicPageTitle>
        <f:DynamicPageHeader>
            <f:content>
                <fb:FilterBar id="filterbar" persistencyKey="myPersKey" useToolbar="false" search=".onSearch" filterChange=".onFilterChange" afterVariantLoad=".onAfterVariantLoad">
                    
                
                
                <fb:filterGroupItems>
           
                        <fb:FilterGroupItem name="Cliente" label="Cliente" groupName="Group1" visibleInFilterBar="true" >
                            <fb:control>
                                
                            <MultiInput id="productInput" showSuggestion="true" showValueHelp="true" valueHelpRequest=".onValueHelpRequest" suggestionItems="{/Clientes}" >
                                <suggestionItems>
                                    <core:ListItem
                                        key="{BR_NFPARTNER}"
                                        text="{
                                            path : 'BR_NFPARTNER',
                                            formatter : '.whitespace2Char'
                                        }"
                                        additionalText="{
                                            path : 'BR_NFPARTNERNAME',
                                            formatter : '.whitespace2Char'
                                        }"
                                        />
                                </suggestionItems>
                            </MultiInput>
                            </fb:control>
                        </fb:FilterGroupItem>
                        <fb:FilterGroupItem name="Centro" label="Centro" groupName="Group1" visibleInFilterBar="true">
                            <fb:control>
                                <MultiInput id="productInput2" showSuggestion="true" showValueHelp="true" valueHelpRequest=".onValueHelpRequest2" suggestionItems="{/Centros}">
                                    <suggestionItems>
                                        <core:ListItem
                                        key="{CFOP}"
                                        text="{
                                            path : 'PLANT',
                                            formatter : '.whitespace2Char'
                                        }"
                                        additionalText="{
                                            path : 'PLANT_DESC',
                                            formatter : '.whitespace2Char'
                                        }"
                                        />
                                    </suggestionItems>
                                </MultiInput>
                            </fb:control>
                        </fb:FilterGroupItem>

                        <fb:FilterGroupItem name="Data do pedido" label="Data do pedido" groupName="Group1" visibleInFilterBar="true"  >
                            <fb:control>
                                <DatePicker
                                id="DP1"
                                placeholder="Data"
                            />
                            </fb:control>
                            
                        </fb:FilterGroupItem>

                        
                        <fb:FilterGroupItem name="Nota fiscal" label="Nota fiscal" groupName="Group1" visibleInFilterBar="true"  >
                            <fb:control>
                                <MultiInput id="productInput4" showSuggestion="true" showValueHelp="true" valueHelpRequest=".onValueHelpRequest3" 
                                suggestionItems="{/Notas}"  
                                
                                
                                
                                >
                                <suggestionItems>
                                    <core:ListItem
                                        key="{CFOP}"
                                        text="{
                                            path : 'CFOP',
                                            formatter : '.whitespace2Char'
                                        }"
                                        />
                                </suggestionItems>
                            </MultiInput>
                            </fb:control>


                            
                        </fb:FilterGroupItem>

                        <fb:FilterGroupItem name="Material" label="Material" groupName="Group1" visibleInFilterBar="true"  >
                            <fb:control>
                                <MultiInput id="productInput5" showSuggestion="true" showValueHelp="true" valueHelpRequest=".onValueHelpRequest4" suggestionItems="{/Materiais}">
                                <suggestionItems>
                                    <core:ListItem
                                    key="{MATERIAL}"
                                    text="{
                                        path : 'MATERIAL',
                                        formatter : '.whitespace2Char'
                                    }"
                                    additionalText="{
                                        path : 'MATERIAL_DESC',
                                        formatter : '.whitespace2Char'
                                    }"
                                    />
                                </suggestionItems>
                            </MultiInput>
                            </fb:control>

                        </fb:FilterGroupItem>
                    </fb:filterGroupItems>
                </fb:FilterBar>
            </f:content>
        </f:DynamicPageHeader>


    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false">

        <semantic:content>
           
            <t:TreeTable enableCustomFilter="true" visibleRowCountMode="Auto"  width="100%" useGroupMode="false"
            id="treeTable"
            rowActionCount="1"
            noData="Utilize os filtros para realizar a busca."
            toggleOpenState="onToggleOpenState"
            expandFirstLevel="false"
            columnResize="true"
            enableColumnReordering="false"
            rows="{
                path : '/Remessas',
                parameters : {               
                
                    treeAnnotationProperties : {
                        hierarchyLevelFor :  'HierarchyLevel',
                        hierarchyNodeFor : 'NodeID',
                        hierarchyParentNodeFor : 'ParentNodeID',
                        hierarchyDrillStateFor : 'DrillState'
                    }
                }
        }"
            >
    
            <t:columns>
    
                <t:Column>
                    <Label text="Cliente"/>
                <t:template>
                        <Text text="{BR_NFPARTNER}" wrapping="false" />
                    </t:template>
                </t:Column>
    
                <t:Column width="200px">

                    <Label text="Nome do cliente"/>
                <t:template>
                        <Text text="{BR_NFPARTNERNAME}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column>
                    <Label text="N° Nota fiscal"/>
                    <t:template>
                         <Text text="{BR_NFENUMBER}" wrapping="false" />
                    </t:template>
                </t:Column>

    
                <t:Column>
                    <Label text="Data"/>
                <t:template>
                        <Text text="{NFE_CREATIONDATE}" wrapping="false" />
                    </t:template>
                </t:Column>
    
                <t:Column>
                    <Label text="N° documento"/>
                    <t:template>
                         <Text text="{BR_NOTAFISCAL}" wrapping="false" />
                    </t:template>
                       

                </t:Column>
                <t:Column>
                    <Label text="Material"/>
                    <t:template>
                         <Text text="{MATERIAL}" wrapping="false" />
                    </t:template>
                       

                </t:Column>

                <t:Column>
                    <Label text="Descrição do material"/>
                    <t:template>
                         <Text text="{MATERIALNAME}" wrapping="false" />
                    </t:template>
                       

                </t:Column>

                <t:Column>
                    <Label text="Quantidade"/>
                    <t:template>
                         <Text text="{QUANTITYINBASEUNIT}" wrapping="false" />
                    </t:template>
                       

                </t:Column>

                <t:Column>
                    <Label text="Preço líquido"/>
                    <t:template>
                         <Text text="{NETPRICEAMOUNT}" wrapping="false" />
                    </t:template>
                       

                </t:Column>

                <t:Column>
                    <Label text="Valor líquido"/>
                    <t:template>
                         <Text text="{NETVALUEAMOUNT}" wrapping="false" />
                    </t:template>
                       

                </t:Column>
    
            </t:columns>
    
        </t:TreeTable>

        </semantic:content>

    
    </semantic:SemanticPage>

</mvc:View>